<div class="row">
    <div class="offset-lg-2 col-lg-8">
        <h1 class="mx-auto text-light font-weight-light mt-5 mb-3">デッキ登録</h1>
    </div>
    <div class="bg-light offset-lg-2 col-lg-8 p-4">
        <% @deck.errors.full_messages.each do |message| %>
            <div class="form-error alert alert-danger">
                <%= message %>
            </div>
        <% end %>
        <%= form_with(model: @deck, local: true, multipart: true) do |f| %>
            <div class="form-group">
                <%= f.label :name, 'デッキ名' %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :imagefile_name, '切り札画像' %>
                <%= f.file_field :imagefile_name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :comment, 'デッキ説明(未入力でも可)' %>
                <%= f.text_area :comment, class: 'form-control' %>
            </div>
            <%= f.hidden_field :number_of_use, :value => 0.to_i %>
            <%= f.hidden_field :number_of_wins, :value => 0.to_i %>
            <%= f.submit '登録', class: 'btn btn-primary btn-block'  %>
        <% end %>
    </div>
</div>