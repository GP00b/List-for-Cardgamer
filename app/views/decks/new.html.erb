<div class="row">
    <div class="offset-2 col-xs-8">
        <div class="mx-auto text-light font-weight-light h1 mt-5 mb-3">
            デッキ登録
        </div>
    </div>
    <div class="bg-light offset-2 col-xs-8 p-4">
        <%= form_with(model: @deck, local: true, multipart: true) do |f| %>
            <div class="form-group">
                <%= f.label :name, 'デッキ名' %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :imagefile_name, '切り札画像' %>
                <%= f.file_field :imagefile_name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :comment, 'デッキ説明' %>
                <%= f.text_area :comment, class: 'form-control' %>
            </div>
            <%= f.hidden_field :number_of_use, :value => 0 %>
            <%= f.hidden_field :number_of_wins, :value => 0 %>
            <%= f.submit '登録', class: 'btn btn-primary btn-block'  %>
        <% end %>
    </div>
</div>