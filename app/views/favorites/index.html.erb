<div class="row">
    <div class="col-lg-8">
        <h1 class="mx-auto text-light font-weight-light mt-5 mb-3">お気に入りデッキ</h1>
    </div> 
</div>
<div class="row">
    <div class="col-lg-12 mt-5">
        <%= paginate @favorites %>
    </div>
</div>
<div class="row">
    <% @favorites.each do |favorite| %>
        <% deck=Deck.find_by(id: favorite.deck_id) %>
        <div class="col-6 col-lg-2 mt-3">
            <%= link_to image_tag("#{deck.imagefile_name}", class: "cardimage"), deck_path(deck) %>
            <h5 class="text-center bg-light"><%= deck.name %></h5>
        </div>
   <% end %>
</div>
<div class="row">
    <div class="col-lg-12 mt-5">
        <%= paginate @favorites %>
    </div>
</div>